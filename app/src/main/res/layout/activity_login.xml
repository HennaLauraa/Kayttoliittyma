<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirjaudu"
        android:id="@+id/Login_btn"
        android:layout_below="@+id/Passwd"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tunnus"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50dp"
        android:hint="Tunnus" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Passwd"
        android:layout_below="@+id/Tunnus"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Tunnus"
        android:layout_marginBottom="50dp"
        android:hint="Salasana" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaikki ohjelmassa olevat toiminnot on vain demonstraatiota varten, eivätkä ne oikeasti toimi : D"
        android:id="@+id/textView11"
        android:layout_below="@+id/Login_btn"
        android:layout_alignParentStart="true" />

</RelativeLayout>
